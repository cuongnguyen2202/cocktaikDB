<div class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-5 detail__left">
        <h3>{{cooktail.name}}</h3>
        <img
          src="{{cooktail.image}}"
          alt="{{cooktail.name}}"
          class="detail__img mt-4"
        />
      </div>
      <div class="col-7 detail__right">
        <h3>Ingredients</h3>
        <div class="row mt-4">
          {{#each cooktail.ingredients}}
            <div class="col-4">
              <p>{{this}}</p>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="detail__instruction mt-5">
      <h3>Instruction</h3>
      <p>{{cooktail.instruction}}</p>
    </div>
  </div>

</div>